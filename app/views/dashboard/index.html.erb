<section id="user-information">
</section>

<% current_user.game_blogs.each do |blog| %>
  <section id="blog-<%=blog.id%>">
    <h2><%= blog.name %></h2>
    <% blog.posts.each do |post| %>
      <section id="blog-<%=blog.id%>-posts-<%=post.id%>">
        <h3><%= post.title %></h3>
        <p><%= post.body %></p>
      </section>
      <%= link_to 'Edit Post', edit_post_path(post) %>
    <% end %>
    <%= link_to 'Edit Blog', edit_game_blog_path(blog) %>
  </section>
  <br>
<% end %>
