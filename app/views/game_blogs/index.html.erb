<p id="notice"><%= notice %></p>

<h1>Game Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_blogs.each do |game_blog| %>
      <tr>
        <td><%= game_blog.name %></td>
        <td><%= link_to 'Show', game_blog %></td>
        <td><%= link_to 'Edit', edit_game_blog_path(game_blog) %></td>
        <td><%= link_to 'Destroy', game_blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game Blog', new_game_blog_path %>
